@model Student

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Delete Student
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Delete">
            @*VALUS FOR NAME AND DISPLAYORDER WILL GET DISPLAYED BY DEFAULT BECAUSE THEY HAVE VALUS IN THEM*@
            <input asp-for="ID" hidden /> @*instead of updating if new is getting created then use this stat.*@
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <hr />
                </div>
                @*<div asp-validation-summary="All"></div>*@
                <div class="mb-3">
                    <label asp-for="Name" class="ms-2"> </label>
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />

                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="ms-2"> </label>
                    <input asp-for="Email" disabled class="form-control border-0 shadow" />

                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="ms-2"> </label>
                    <input asp-for="Phone" disabled class="form-control border-0 shadow" />

                </div>
                <div class="mb-3">
                    <label asp-for="Address" class="ms-2"> </label>
                    <input asp-for="Address" disabled class="form-control border-0 shadow" />

                </div>
                <div class="mb-3">
                    <label asp-for="City" class="ms-2"> </label>
                    <input asp-for="City" disabled class="form-control border-0 shadow" />

                </div>
                <div class="row mt-3">
                    @*<div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                    <a asp-controller="Student" asp-action="Index" class="btn btn-secondary" style="width:150px">
                         Back to List
                    </a>
                    </div>*@
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger btn-outline-warning" style="width: 150px; padding: 5px;">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary btn-sm" style="width: 150px; padding: 5px;">
                            Back to List
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>


